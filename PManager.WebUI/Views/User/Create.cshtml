@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
<style type="text/css">
    /* just a dummy class */
    label {
        font-size: smaller;
    }
    .visible {
        visibility: visible;
        color: #f00;
    }

    .invisible {
        visibility: hidden;
    }
</style>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-user fa-fw"></i>    New User
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="col-lg-12" id="alertDiv">
                    </div>
                    <div class="col-lg-6">
                        <form role="form">
                            <h4>Basic Info</h4>
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" class="form-control" id="FirstName" name="FirstName" />
                                <label class="invisible" id="FirstNameLabel">* Required</label>
                            </div>
                            <div class="form-group">
                                <label>Middle Name</label>
                                <input type="text" class="form-control" id="MiddleName" name="MiddleName" />
                                <label class="invisible" id="MiddleNameLabel">* Required</label> 
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" id="LastName" name="LastName" />
                                <label class="invisible" id="LastNameLabel">* Required</label>
                            </div>      
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <form role="form">
                            <h4>Account Information</h4>
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" id="Username" name="Username" />
                                <label class="invisible" id="UsernameLabel">* Required</label>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="text" class="form-control" id="Password" name="Password" />
                                <label class="invisible" id="PasswordLabel">* Required</label>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="text" class="form-control" id="ComparePassword" name="ComparePassword" />
                                <label class="invisible" id="ComparePasswordLabel">* Required</label>
                            </div>
                            <div class="form-group">
                                <label>User Role</label>
                                @Html.DropDownList("roles", new SelectList(Roles.GetAllRoles()), new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-primary btn-small">Save</button>
                            <button type="reset" class="btn btn-success btn-small">Clear Form</button>
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success btn-small" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('button[type="submit"]').click(function (event) {
                event.preventDefault();
                alert('attempted to save');
                return false;
            });
        });
    </script>
}
