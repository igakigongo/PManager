@model PManager.Domain.Entities.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Erbium 1.0 - Sign In</title>

        <!-- Core CSS - Include with every page -->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet">
        <link href="~/Content/sb-admin-v2/font-awesome/css/font-awesome.min.css" rel="stylesheet">

        <!-- SB Admin CSS - Include with every page -->
        <link href="~/Content/sb-admin-v2/css/sb-admin.css" rel="stylesheet">

        <!-- Custom CSS - for this page -->
        <style type="text/css">
            ul {
                list-style: none;
            }
        </style>
        <link href="~/Content/Styles.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Sign In</h3>
                        </div>
                        <div class="panel-body">
                            @using(Html.BeginForm()){
                                <div style="color: #f00;">
                                    @Html.ValidationSummary()
                                </div>
                                <fieldset>
                                    <legend></legend>
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Username", maxlength = "20", autofocus = "autofocus" })
                                        @*<input class="form-control" placeholder="Username" name="UserName" type="text" maxlength="40" autofocus="autofocus">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "form-control", maxlength = "20" })
                                        @*<input class="form-control" placeholder="Password" name="Password" type="password" maxlength="20" value="">*@
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(model => model.RememberMe) Remember Me
                                            @*<input name="RememberMe" type="checkbox" value="Remember Me">Remember Me*@
                                        </label>
                                    </div>
                                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Log In" />
                                </fieldset>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Core Scripts - Include with every page -->
        <script src="~/Scripts/jquery-2.0.3.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Content/sb-admin-v2/js/plugins/metisMenu/jquery.metisMenu.js"></script>

        <!-- SB Admin Scripts - Include with every page -->
        <script src="~/Content/sb-admin-v2/js/sb-admin.js"></script>
    </body>
</html>
