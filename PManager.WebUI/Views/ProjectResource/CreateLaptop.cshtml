@model PManager.Domain.Entities.Laptop

@{
    ViewBag.Title = "Laptop Entry Form";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Administrator - Dashboard</h1>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>BOU - Laptop Registration Form</strong>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-lg-6">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <label>Serial Number</label>
                        <input class="form-control" name="SerialNumber" id="SerialNumber" />
                        @Html.ValidationMessageFor(model => model.SerialNumber, "* Required", new { style = "color:red" })<br />
                        
                        <label>Laptop Name</label>
                        <input class="form-control" name="LaptopName" id="LaptopName" />
                        @Html.ValidationMessageFor(model => model.LaptopName, "* Required", new { style = "color:red" })<br />
                        
                        <label>Laptop Cost (US$)</label>
                        <input class="form-control" name="Cost" id="Cost" />
                        @Html.ValidationMessageFor(model => model.Cost, "* Required", new { style = "color:red" })<br />
                       
                        <input type="submit" value="Create" class="btn btn-primary" />
                        @Html.ActionLink("Back to List", "Laptops", null, new { @class = "btn btn-success" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
