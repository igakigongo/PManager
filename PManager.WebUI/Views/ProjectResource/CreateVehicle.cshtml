@model PManager.Domain.Entities.Vehicle

@{
    ViewBag.Title = "CreateVehicle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Administrator - Dashboard</h1>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>BOU - Vehicle Registration Form</strong>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-lg-6">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <label>Number Plate</label>
                        <input class="form-control" name="NumberPlate" id="NumberPlate" />
                        @Html.ValidationMessageFor(model => model.NumberPlate, null, new { style = "color:red" })<br />

                        <label>Car Type</label>
                        @Html.DropDownList("CarType", new SelectList(new String[] { "Toyota Ipsum", "Mercedes Benz", "BMW", "Toyota Harrier", "Toyota Hilux", "Nissan Double Cabin" }), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CarType)<br />

                        <input type="submit" value="Create" class="btn btn-primary" />
                        @Html.ActionLink("Back To List", "Vehicles", null, new { @class = "btn btn-success" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
