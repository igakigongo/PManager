@model PManager.Domain.Entities.ProjectTask

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div id="page-wrapper" data-ng-controller="TasksController">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">New Task </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-6">
            <form name="teamForm" novalidate>
                <div class="form-group" ng-class="{ 'has-error' : teamForm.TaskName.$invalid && !teamForm.TaskName.$pristine }">
                    <span class="control-label">Task Name </span>
                    <input type="text" name="TaskName" class="form-control" data-ng-model="Task.TaskName" required />
                    <span ng-show="teamForm.TaskName.$invalid && !teamForm.TaskName.$pristine" class="error"><i class="fa fa-warning"></i> Name for the task is required.</span>
                </div>

                <div class="form-group" ng-class="{ 'has-error' : teamForm.ProjectId.$invalid && !teamForm.ProjectId.$pristine }">

                    <span class="control-label">Project</span>

                    <select name="ProjectId" class="form-control" required ng-model="Task.ProjectId">
                        <option value="">-- Select project --</option>
                        <option ng-repeat="project in projects" value="{{project.Id}}">{{project.Name}}</option>
                    </select>
                    <span ng-show="teamForm.ProjectId.$invalid && !teamForm.ProjectId.$pristine" class="error"><i class="fa fa-warning"></i> Project should be provided.</span>
                </div>
                <div class="form-group" ng-class="{ 'has-error' : teamForm.Budget.$invalid && !teamForm.Budget.$pristine }">
                    <span class="control-label">Estimated Cost </span>
                    <input type="number" name="Budget" class="form-control datepicker" data-ng-model="Task.Budget" required />
                    <span ng-show="teamForm.Budget.$invalid && !teamForm.Budget.$pristine" class="error"><i class="fa fa-warning"></i> The estimated cost is required.</span>
                </div>

                <div class="form-group" ng-class="{ 'has-error' : teamForm.StartDate.$invalid && !teamForm.StartDate.$pristine }">
                    <span class="control-label">Estimated Start Date </span>
                    <input type="text" name="StartDate" id="EstimatedStartDate" class="form-control" data-ng-model="Task.StartDate" required readonly="readonly"/>
                    <span ng-show="teamForm.StartDate.$invalid && !teamForm.StartDate.$pristine" class="error"><i class="fa fa-warning"></i> The start date is required.</span>
                </div>

                <div class="form-group" ng-class="{ 'has-error' : teamForm.EndDate.$invalid && !teamForm.EndDate.$pristine }">
                    <span class="control-label">Estimated End Date </span>
                    <input type="text" name="EndDate" id="EstimatedEndDate" class="form-control" data-ng-model="Task.EndDate" required readonly="readonly" />
                    <span ng-show="teamForm.EndDate.$invalid && !teamForm.EndDate.$pristine" class="error"><i class="fa fa-warning"></i> The end date is required.</span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" data-ng-click="saveTask()" ng-disabled="teamForm.$invalid" /> <a href="/ProjectTask/Index" class="btn btn-default"> Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.steps.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
}