@model PManager.Domain.Entities.Team

@{
    ViewBag.Title = "Teams | Details";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";

    var projectsDone = @ViewBag.projectsDone;
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">@Model.Name | <a href='@Url.Action("Index", "Teams")'>Back to list</a> </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-12 alert alert-info">
                <strong>Project being worked on:</strong><em> @*@(Model.Tasks.Name == null ? Html.Label("None", new {@class = "font-weight-normal"}) : Html.DisplayFor(x => Model.Project.Name))*@</em>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-users fa-fw"></i> Team Members
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body" id="container">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="team-members" style="font-size: small">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Contact
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Users)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fullname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneContact)
                                        </td>

                                       </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Tasks Worked on
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body" id="container">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="team-members" style="font-size: small">
                            <thead>
                                <tr>
                                    <th>
                                        Task Name
                                    </th>
                                    <th style="width: 200px">
                                        Project
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Tasks)
                                {
                                    <tr>
                                        <td>
                                            @item.TaskName
                                        </td>
                                        <td>
                                            @item.Project.Name
                                        </td>

                                        <td>
                                            @if (item.IsCompleted)
                                            {
                                                <span>Complete</span>
                                            }
                                            <span>Incomplete</span>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Page-Level Plugin Scripts - Tables -->
    <script src="~/Content/sb-admin-v2/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/sb-admin-v2/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $('#team-members').dataTable({
            //"paging": false,
            //"ordering": false,
            //"info": false
        });
    </script>
}
