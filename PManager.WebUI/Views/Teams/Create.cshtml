@model PManager.Domain.Entities.Team

@{
    ViewBag.Title = "Teams | Create New";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div id="page-wrapper" data-ng-controller="TeamsController">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">New Team </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-6">
            <form>
                <div class="form-group">
                    @Html.LabelFor(x => Model.Name)
                    <input type="text" class="form-control" data-ng-model="teamName" data-ng-required />
                    @*@Html.TextBoxFor(x => Model.Name, new { @class = "form-control" })*@
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => Model.Project)
                    <input type="text" class="form-control" data-ng-model="projectName" data-ng-required />
                    @*@Html.TextBoxFor(x => Model.Project.Name, new { @class = "form-control" })*@
                </div>
                <div class="form-group">
                    @Html.Label("Project code")
                    <input type="text" class="form-control" data-ng-model="projectCode" data-ng-required />
                    @*@Html.TextBoxFor(x => Model.Project.ProjectCode, new { @class = "form-control" })*@
                </div>
                <div class="form-group">
                    @Html.Label("Project description")
                    <textarea class="form-control" data-ng-model="projectDescription" data-ng-required></textarea>
                    @*@Html.TextAreaFor(x => Model.Project.Description, new { @class = "form-control" })*@
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" data-ng-click="save()" /> <a href="/Teams/Index" class="btn btn-default"> Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>