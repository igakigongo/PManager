@using System.Collections.Specialized
@model PManager.Domain.Entities.Team

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_LayoutManager.cshtml";
}

<div id="page-wrapper">
    <div class="clearfix" style="
    padding-top: 35px;
">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(excludePropertyErrors: true)
            <fieldset>
                <legend>Edit Album</legend>

                <div class="row" style="
                                         margin-right: 13px;
                                     ">
                    <div class="col-lg-12 alert alert-info" style="margin-left: 15px; margin-right: 25px;">
                        Adding users to <em>@Html.DisplayTextFor(x => x.Name)</em> team
                        <input type="hidden" name="id" value="@Model.Id"/>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.Label("User")
                            @Html.DropDownList("userId", ViewBag.users as SelectList,"--Select user--", new {@class = "form-control"})

                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add"  class="btn btn-success" data-ng-disable=""/> <a href="/Teams/Index" class="btn btn-default"> Back to list</a>
                        </div>
                    </div>
                </div>
            </fieldset>
        }
    </div>
   
       
           
</div>
